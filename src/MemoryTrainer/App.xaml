<Application x:Class="MemoryTrainer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MemoryTrainer"
             xmlns:mvvm="clr-namespace:MemoryTrainer.MVVM"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <!-- System Wide for MMVM ! -->
        <local:Bootstrap x:Key="ViewModelLocator"/>
        <mvvm:Container x:Key="Container"/>
        
        
        <!-- Styles-->
        <Style x:Key="CommandButton" TargetType="Button">
            <Setter Property="Margin" Value="5 0 5 0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style x:Key="SystemCommandButton" TargetType="Button">
            <Setter Property="Margin" Value="5 2 5 2"/>
            <Setter Property="Background" Value="AntiqueWhite"/>
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

    </Application.Resources>
</Application>
